{
  "manifestVersion": "1.0.0",
  "name": "ScheduleBriefing",
  "version": "1.0.0",
  "displayName": "用户日程简报",
  "description": "每小时自动清理过期日程，并提取下一个日程供AI参考。",
  "author": "Kilo Code",
  "pluginType": "static",
  "entryPoint": {
    "type": "nodejs",
    "command": "node ScheduleBriefing.js"
  },
  "refreshIntervalCron": "0 * * * *",
  "communication": {
    "protocol": "stdio",
    "timeout": 10000
  },
  "capabilities": {
    "systemPromptPlaceholders": [
      {
        "placeholder": "VCPNextSchedule",
        "description": "显示用户的下一个日程安排。"
      }
    ]
  }
}